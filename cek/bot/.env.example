# CEK Bot Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Token (required)
# Get it from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Database path (optional, default: /data/bot.db)
DB_PATH=/data/bot.db

# Font path (optional, default: /app/resources/DejaVuSans.ttf)
FONT_PATH=/app/resources/DejaVuSans.ttf


# Logging level (optional, default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory inside container (optional, default: /logs)
LOG_DIR=/logs

ADMIN_IDS=123456789
